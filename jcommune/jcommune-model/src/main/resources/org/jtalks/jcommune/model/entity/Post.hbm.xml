<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.jtalks.jcommune.model.entity.Post" table="POST">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <many-to-one name="userCreated" class="org.jtalks.jcommune.model.entity.User" 
            column="USER_CREATED"/>
        <property name="postDate" column="POST_DATE"/>
        <property name="postContent" column="POST_CONTENT"/>
    </class>
</hibernate-mapping>
